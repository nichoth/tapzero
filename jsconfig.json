{
  "extends": "./_types/base-tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "dist",
    "noImplicitAny": false,
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "paths": {
      "@pre-bundled/tape": ["./_types/pre-bundled__tape"],
      "*" : ["./_types/*"]
    }
  },
  "include": [
    "_types/**/*.d.ts",
    "*.js",
    "test/**/*.js"
  ]
}
